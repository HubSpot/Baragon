{{#if synced}}
    <div class="row">
        <div class="col-md-6">
            <ul class="list-group">
                <li class="list-group-item"><h4>Request Worker Lag <span class="pull-right">{{workerLagHumanize status.workerLagMs }}</span></h4></li>
                <li class="list-group-item"><h4>Elb Worker Lag <span class="pull-right">{{workerLagHumanize status.elbWorkerLagMs }}</span></h4></li>
                <li class="list-group-item"><h4>ZK Connection State <span class="pull-right">{{ status.zookeeperState }}</span></h4></li>
                <li class="list-group-item">
                    <h4>BaragonService Workers</h4>
                    <ul class="list-group">
                        {{#each workers}}
                            <li class="list-group-item">
                                <a href="{{this}}/status">{{ this }}</a>
                            </li>
                        {{/each}}
                    </ul>
                </li>
            </ul>
        </div>
        <div class="col-md-6">
            <h4>Pending Requests</h4>
            <ul class="list-group">
                {{#each queued}}
                    <li class="list-group-item">
                        <a title="{{ requestId }}" href="{{appRoot}}/requests/{{ requestId }}">
                            {{ requestId }}
                        </a>
                    </li>
                {{else}}
                    <div class="empty-table-message"><p>No pending requests</p></div>
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <h4>Get Request Details</h4>
            <input type="search" class="big-search-box" placeholder="Enter a RequestId" value="{{ requestId }}" required />
        </div>
    </div>
{{else}}
    <div class="page-loader centered cushy"></div>
{{/if}}
